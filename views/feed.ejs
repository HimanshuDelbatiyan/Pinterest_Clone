<!--Note: When including other .ejs template into the one ejs using
the include make sure the ejs tag include ("-")
as well as remember when want to print a value out of variable make sure that
the ejs tag contains "="
-->
<%- include ('./components/header.ejs') %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <div class="cards flex flex-wrap gap-10">
        <% posts.forEach(function(post){%>
            <div class="card w-32">
                <div class="card w-full h-40 bg-zinc-700 overflow-hidden rounded-lg">
                    <img class="w-full h-full object-cover rounded-lg" src="/images/uploads/<%= post.postImage%>" alt="">
                </div>
                <h5 class="mt-2 text-sm"><%= post.postTitle%></h5>
                <h6 class="text-xs font-semibold opacity-500"><%= post.user.username%></h6>
            </div>
        <%})%>
    </div>
</div>
<%- include ('./components/footer.ejs') %>