<!--Note: When including other .ejs template into the one ejs using
the include make sure the ejs tag include ("-")
as well as remember when want to print a value out of variable make sure that
the ejs tag contains "="
-->
<%- include ('./components/header.ejs') %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-xl"> Create a new post</h1>
    <hr class="opacity-10 mt-3">
<!--    BC You forget specifying the "Encoding Type"-->
    <form action="/createPost" method="post" enctype="multipart/form-data">
        <input  class="block w-1/3 px-3 py-2" type="file" name="postImage" >
        <input  class="block w-1/3 px-3 py-2  border-2 mt-2 rounded-md text-black" type="text" name="postTitle" placeholder="Title">
        <textarea  class="block w-1/3 px-3 py-2  h-60 border-2 mt-2 rounded-md text-black" type="text" name="postDescription" placeholder="Description"></textarea>
        <input  class="block w-1/3 px-3 py-2  mt-2  bg-red-700 rounded-md" type="submit" value="Create post">
    </form>
</div>
<!-- Footer -->
<%- include ('./components/footer.ejs') %>