<!--Note: When including other .ejs template into the one ejs using
the include make sure the ejs tag include ("-")
as well as remember when want to print a value out of variable make sure that
the ejs tag contains "="
-->
<%- include ('./components/header.ejs') %>
<div class=" w-full bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1714508862788-44e45c4315d0?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwyfHx8ZW58MHx8fHx8')] h-screen flex items-center justify-center">
    <div class="w-[25vw]  bg-white px-20 py-20 rounded-[30px]">
        <h1 class="text-3xl  text-center font-semibold text-zinc-700 tracking-tight capitalize mb-3">Create New Account</h1>
        <form action="/register" method="post">
            <input class=" border-2 rounded-md block w-full px-3 py-2 mb-2" type="text" name="username" id="username" placeholder="Username">
            <input class=" border-2 rounded-md block w-full px-3 py-2 mb-2" type="text" name="fullname" id="fullname" placeholder="fullname">
            <input class=" border-2 rounded-md block w-full px-3 py-2 mb-2" type="email" name="email" id="email" placeholder="Email">
            <input class=" border-2 rounded-md block w-full px-3 py-2 mb-2" type="password" name="password" id="password" placeholder="Password">
            <input class=" border-2 rounded-md block w-full px-3 py-2 mb-2" type="number" name="contact" id="contact" placeholder="Contact Number">
            <input class=" border-2 rounded-full block w-full px-3 py-2 bg-red-600 text-white " type="submit" value="Register">
            <p class="text-xs font-semibold text-zinc-700 mt-7 w-2/3 mx-auto text-center">
                By continuing, you agree to Pinterest's Terms of Service;
            </p>
        </form>
        <a class="inline-block mt-7 text-sm text-zinc-700 text-center w-full" href="/">Already have an account ? Login</a>
    </div>
</div>

<%- include ('./components/footer.ejs') %>